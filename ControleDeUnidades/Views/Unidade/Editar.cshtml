@using ControleDeContatos.Enums
@model UnidadeModel
@{
    ViewData["Title"] = "Editar unidade";
}

<div class="text-center">
    <h1 class="display-4">Editar unidade</h1>
</div>


<form asp-controller="Unidade" asp-action="Editar" method="post">

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome da unidade">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>  

    <div class="form-group">
        <label for="nome" class="form-label">Ativo</label>
        <select asp-for="Status" class="form-control">
            <option value="">Selecione</option>
            <option value="@StatusEnum.Ativo">Ativa</option>
            <option value="@StatusEnum.Inativo">Inativa</option>
        </select>
         @Html.ValidationMessageFor(x => x.Status)
    </div>

    <button type="submit" class="btn btn-primary btn-block">Editar</button>
    <a class="btn btn-secondary btn-block" asp-action="Index" asp-controller="Unidade" role="button">Voltar</a>

</form>
