@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}


@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
}

<div class="text-center mb-5">
    <h1 class="display-4">Login</h1>   
</div>

<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="d-flex justify-content-center ">
        <div class="mb-3" style="width: 400px">
            <label for="login" class="form-label">Usuário</label>
            <input type="text" asp-for="Login" class="form-control" id="login">
            @Html.ValidationMessageFor(x => x.Login)
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="mb-3" style="width: 400px">
            <label for="senha" class="form-label">Senha</label>
            <input type="password" asp-for="Senha" class="form-control" id="senha">
            @Html.ValidationMessageFor(x => x.Senha)
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <p class="mb-4 text-sm mx-auto">
            Ainda não tem cadastro ?
            <a asp-action="Criar" asp-controller="Usuario" class="text-primary text-gradient font-weight-bold">Cadastrar</a>
        </p>
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" style="width: 400px" class="btn btn-primary btn-block">Entrar</button>
    </div>

</form>